{% comment %} 404 template - Page Not Found {% endcomment %}
<section class="page-width">
  <div class="not-found">
    <h1>404</h1>
    <h2>{{ 'general.404' | t }}</h2>
    <p style="margin: var(--spacing-lg) 0;">
      The page you are looking for could not be found. It may have been moved or deleted.
    </p>
    <a href="/" class="btn btn-primary">{{ 'general.home' | t }}</a>
  </div>
</section>
