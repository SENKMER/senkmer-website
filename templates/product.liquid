{% comment %} Product template {% endcomment %}
<div class="page-width">
  <div class="grid grid-2" style="margin-top: var(--spacing-lg);">
    <div>
      {% if product.featured_image %}
        <img src="{{ product.featured_image | image_url: width: 500 }}" alt="{{ product.title }}" style="width: 100%; border-radius: var(--radius-lg);">
      {% endif %}
    </div>
    <div>
      <h1>{{ product.title }}</h1>
      <div class="card-price">{{ product.price | money }}</div>
      
      {% if product.description %}
        <div style="margin: var(--spacing-lg) 0;">
          {{ product.description }}
        </div>
      {% endif %}

      <button class="btn btn-primary" style="width: 100%; padding: var(--spacing-md);">
        Add to Cart
      </button>
    </div>
  </div>
</div>
