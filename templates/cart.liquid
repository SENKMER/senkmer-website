{% comment %} Cart template {% endcomment %}
<section class="page-width">
  <header class="section-header">
    <h1>Shopping Cart</h1>
  </header>

  {% if cart.item_count > 0 %}
    <div class="cart-items">
      {% for item in cart.items %}
        <div class="cart-item">
          <div>
            <p style="font-weight: 600; margin-bottom: var(--spacing-xs);">{{ item.title }}</p>
            <p style="color: var(--color-text-light); font-size: var(--font-size-sm);">Qty: {{ item.quantity }}</p>
          </div>
          <div class="card-price">{{ item.price | money }}</div>
        </div>
      {% endfor %}
    </div>
    <div style="margin-top: var(--spacing-lg); text-align: right;">
      <h3>Total: <span class="card-price">{{ cart.total_price | money }}</span></h3>
      <button class="btn btn-primary" style="margin-top: var(--spacing-md); padding: var(--spacing-md) var(--spacing-lg);">
        Proceed to Checkout
      </button>
    </div>
  {% else %}
    <div style="text-align: center; padding: var(--spacing-xl);">
      <p style="font-size: var(--font-size-lg);">Your cart is empty</p>
      <a href="/collections/all" class="btn btn-primary" style="display: inline-block; margin-top: var(--spacing-md);">
        Continue Shopping
      </a>
    </div>
  {% endif %}
</section>
