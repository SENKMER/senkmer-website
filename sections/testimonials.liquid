<section class="testimonials">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="testimonial-grid">
      {% for block in section.blocks %}
        <div class="testimonial-card">
          <div class="stars">⭐⭐⭐⭐⭐</div>
          <p class="quote">"{{ block.settings.quote }}"</p>
          <p class="author">— {{ block.settings.author }}</p>
        </div>
      {% endfor %}
    </div>
  </div>
</section>

<style>
.testimonials {
  padding: 60px 20px;
  background-color: #f9fafb;
}
.testimonials h2 {
  text-align: center;
  margin-bottom: 2rem;
}
.testimonial-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}
.testimonial-card {
  background: white;
  padding: 2rem;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  text-align: center;
}
.testimonial-card .stars {
  font-size: 1.5rem;
  margin-bottom: 1rem;
}
.testimonial-card .quote {
  font-style: italic;
  margin-bottom: 1rem;
  color: #4b5563;
}
.testimonial-card .author {
  font-weight: 600;
  color: var(--primary, #0ea5a0);
}
</style>

{% schema %}
{
  "name": "Testimonials",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Hva sier kundene våre"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "Fantastisk produkt!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "Kunde Navn"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Testimonials",
      "blocks": [
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        },
        {
          "type": "testimonial"
        }
      ]
    }
  ]
}
{% endschema %}
