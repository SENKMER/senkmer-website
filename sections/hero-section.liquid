<section class="hero-section">
  <div class="hero-content">
    <h1>{{ section.settings.title }}</h1>
    <p class="hero-subtitle">{{ section.settings.subtitle }}</p>
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="btn btn-primary">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>
</section>

<style>
.hero-section {
  padding: 80px 20px;
  text-align: center;
  background: linear-gradient(135deg, var(--primary, #0ea5a0) 0%, var(--accent, #60a5fa) 100%);
  color: white;
}
.hero-content h1 {
  font-size: 3rem;
  margin-bottom: 1rem;
}
.hero-subtitle {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  opacity: 0.95;
}
@media (max-width: 720px) {
  .hero-content h1 { font-size: 2rem; }
}
</style>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Velkommen til Senkmer"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Lær norsk på en morsom måte"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Kom i gang"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
