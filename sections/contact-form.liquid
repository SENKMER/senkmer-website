<section class="contact">
  <div class="page-width">
    <h1>{{ section.settings.heading }}</h1>
    {% if section.settings.subtext != blank %}<p class="muted">{{ section.settings.subtext }}</p>{% endif %}
    {% form 'contact' %}
      <div class="form__group">
        <label for="ContactFormName">Navn</label>
        <input id="ContactFormName" name="contact[name]" type="text" required>
      </div>
      <div class="form__group">
        <label for="ContactFormEmail">E‑post</label>
        <input id="ContactFormEmail" name="contact[email]" type="email" required>
      </div>
      <div class="form__group">
        <label for="ContactFormMessage">Melding</label>
        <textarea id="ContactFormMessage" name="contact[body]" rows="6" required></textarea>
      </div>
      <button class="btn btn--primary" type="submit">Send</button>
      {% if form.posted_successfully? %}
        <p class="form__success">Takk! Vi tar kontakt så snart som mulig.</p>
      {% endif %}
      {% if form.errors %}
        <p class="form__error">Det oppstod en feil. Vennligst prøv igjen.</p>
      {% endif %}
    {% endform %}
  </div>
</section>

{% schema %}
{
  "name": "Kontakt - Skjema",
  "settings": [
    { "type": "text", "id": "heading", "label": "Tittel", "default": "Kontakt oss" },
    { "type": "textarea", "id": "subtext", "label": "Undertekst", "default": "Vi svarer vanligvis innen 24 timer." }
  ],
  "presets": [ { "name": "Kontakt - Standard" } ]
}
{% endschema %}
