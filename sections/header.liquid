<header class="site-header" id="header">
  <div class="nav-container">
    <a href="{{ routes.root_url }}" class="logo">
      {% if section.settings.logo %}
        <img src="{{ section.settings.logo | image_url: width: 150 }}" alt="{{ shop.name }}" width="150" height="50">
      {% else %}
        <img src="{{ 'logo.svg' | asset_url }}" alt="{{ shop.name }}" width="150" height="50">
      {% endif %}
    </a>
    
    <nav>
      {% assign main_menu = linklists[section.settings.menu] %}
      <ul class="nav-menu" id="nav-menu">
        {% if main_menu and main_menu.links.size > 0 %}
          {% for link in main_menu.links %}
            {% assign is_shop = link.title | downcase | strip %}
            <li>
              <a class="nav-link{% if is_shop == 'butikk' %} nav-link-shop{% endif %}" href="{{ link.url }}">{{ link.title }}</a>
            </li>
          {% endfor %}
        {% else %}
          <li><a class="nav-link" href="{{ routes.root_url }}">Hjem</a></li>
        {% endif %}
      </ul>
    </nav>
    
    <button class="mobile-menu-toggle" id="mobile-menu-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Navigasjonsmeny",
      "default": "main-menu"
    }
  ]
}
{% endschema %}
