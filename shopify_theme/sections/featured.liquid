{% comment %} Enkel seksjon for Shopify {% endcomment %}
<div class="featured-section">
  <div class="container">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.text }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Fremhevet seksjon",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Overskrift",
      "default": "Velkommen"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Tekst",
      "default": "Dette er en enkel seksjon."
    }
  ]
}
{% endschema %}
