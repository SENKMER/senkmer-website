<div class="hero" style="background: linear-gradient(135deg, {{ section.settings.color_1 }}, {{ section.settings.color_2 }});">
  <div class="container">
    <h1 style="background: linear-gradient(to right, #0071e3, #58cc02); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
      {{ section.settings.heading }}
    </h1>
    
    {% if section.settings.subheading != blank %}
      <p class="hero-subtitle">{{ section.settings.subheading }}</p>
    {% endif %}
    
    {% if section.settings.cta_text != blank %}
      <a href="{{ section.settings.cta_url }}" class="btn btn-primary btn-large">
        {{ section.settings.cta_text }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Revolusjon√©r kundeservice med AI"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "Kom i gang"
    },
    {
      "type": "url",
      "id": "cta_url",
      "label": "CTA URL"
    },
    {
      "type": "color",
      "id": "color_1",
      "label": "Gradient Color 1",
      "default": "#0071e3"
    },
    {
      "type": "color",
      "id": "color_2",
      "label": "Gradient Color 2",
      "default": "#58cc02"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
