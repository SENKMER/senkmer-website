<section class="hero">
  <div class="hero-background">
    <div class="hero-gradient"></div>
    {% if section.settings.hero_image %}
      <div class="hero-image">
        <img src="{{ section.settings.hero_image | img_url: '800x' }}" alt="{{ section.settings.hero_title }}">
      </div>
    {% endif %}
  </div>
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title fade-in">
        {{ section.settings.hero_title }}
      </h1>
      <p class="hero-subtitle fade-in-delay-1">
        {{ section.settings.hero_subtitle }}
      </p>
      <div class="hero-cta fade-in-delay-2">
        {% if section.settings.primary_button_text != blank %}
          <a href="{{ section.settings.primary_button_url }}" class="btn btn-primary">
            {{ section.settings.primary_button_text }}
          </a>
        {% endif %}
        {% if section.settings.secondary_button_text != blank %}
          <a href="{{ section.settings.secondary_button_url }}" class="btn btn-secondary">
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
  <div class="scroll-indicator">
    <span></span>
  </div>
</section>

{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero Tittel",
      "default": "Velkommen til fremtiden"
    },
    {
      "type": "textarea",
      "id": "hero_subtitle",
      "label": "Hero Undertittel",
      "default": "Vi skaper digitale opplevelser som inspirerer og engasjerer"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Bilde"
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primær Knapp Tekst",
      "default": "Utforsk våre tjenester"
    },
    {
      "type": "url",
      "id": "primary_button_url",
      "label": "Primær Knapp URL"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Sekundær Knapp Tekst",
      "default": "Ta kontakt"
    },
    {
      "type": "url",
      "id": "secondary_button_url",
      "label": "Sekundær Knapp URL"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}
