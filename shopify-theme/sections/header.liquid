<header class="site-header">
  <div class="container">
    <a href="{{ routes.root_url }}" class="logo">
      <img src="{{ 'senkmer-logo.svg' | asset_url }}" alt="SENKMER">
    </a>
    
    <nav>
      {% for link in linklists.main-menu.links %}
        <a href="{{ link.url }}">{{ link.title }}</a>
      {% endfor %}
    </nav>
    
    <div class="header-actions">
      <a href="{{ routes.cart_url }}" class="btn btn-primary">
        {{ 'header.cart' | t }} ({{ cart.item_count }})
      </a>
      
      {% if customer %}
        <a href="{{ routes.account_url }}">{{ 'header.account' | t }}</a>
      {% else %}
        <a href="{{ routes.account_login_url }}">{{ 'header.login' | t }}</a>
      {% endif %}
    </div>
    
    <button id="mobileMenuToggle" class="mobile-menu-toggle" aria-label="Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": []
}
{% endschema %}
