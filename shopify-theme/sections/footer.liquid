<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-col">
        <img src="{{ 'senkmer-logo.svg' | asset_url }}" alt="SENKMER" class="footer-logo">
        <p>{{ section.settings.tagline | default: 'Din AI-drevne kundeservice' }}</p>
      </div>
      
      <div class="footer-col">
        <h4>{{ 'footer.products' | t }}</h4>
        <ul>
          {% for link in linklists.footer-products.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      
      <div class="footer-col">
        <h4>{{ 'footer.company' | t }}</h4>
        <ul>
          {% for link in linklists.footer-company.links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>
      
      <div class="footer-col">
        <h4>{{ 'footer.contact' | t }}</h4>
        <p><strong>{{ 'footer.email' | t }}:</strong> contact@senkmer.no</p>
        <p><strong>{{ 'footer.phone' | t }}:</strong> (+47) 400 00 000</p>
        <p>Senkmer AS<br>Oslo, Norge</p>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {{ 'now' | date: "%Y" }} Senkmer AS. {{ 'footer.rights' | t }}</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Din AI-drevne kundeservice"
    }
  ]
}
{% endschema %}
