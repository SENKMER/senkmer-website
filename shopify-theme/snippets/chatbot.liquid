<div class="chatbot-container" id="chatbot">
  <button class="chatbot-toggle" id="chatbot-toggle" aria-label="Åpne chat">
    <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
      <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" 
            stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </button>
  
  <div class="chatbot-window" id="chatbot-window" hidden>
    <div class="chatbot-header">
      <h3>{{ section.settings.chatbot_title }}</h3>
      <button class="chatbot-close" id="chatbot-close" aria-label="Lukk chat">×</button>
    </div>
    
    <div class="chatbot-messages" id="chatbot-messages">
      <div class="chatbot-message bot-message">
        <p>{{ section.settings.welcome_message }}</p>
      </div>
    </div>
    <div class="chatbot-suggestions" id="chatbot-suggestions" aria-label="Hurtigforslag" role="list">
      <button type="button" class="chip" data-question="Hvordan oppretter jeg konto?">Opprett konto</button>
      <button type="button" class="chip" data-question="Hva koster det?">Priser</button>
      <button type="button" class="chip" data-question="Er løsningen trygg?">Sikkerhet</button>
      <button type="button" class="chip" data-question="Jeg har glemt passordet mitt">Glemt passord</button>
      <button type="button" class="chip" data-question="Hvordan sletter jeg kontoen min?">Slett konto</button>
    </div>
    
    <div class="chatbot-input">
      <input type="text" placeholder="{{ section.settings.input_placeholder }}" id="chatbot-input">
      <button id="chatbot-send">Send</button>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Chatbot",
  "settings": [
    {
      "type": "text",
      "id": "chatbot_title",
      "label": "Chatbot Tittel",
      "default": "Kundeservice"
    },
    {
      "type": "textarea",
      "id": "welcome_message",
      "label": "Velkomstmelding",
      "default": "Hei! Hvordan kan jeg hjelpe deg i dag?"
    },
    {
      "type": "text",
      "id": "input_placeholder",
      "label": "Input Placeholder",
      "default": "Skriv din melding..."
    }
  ]
}
{% endschema %}
