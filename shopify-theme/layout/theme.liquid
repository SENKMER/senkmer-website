<!doctype html>
<html lang="no">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page_title }}{{ shop.name | prepend: ' - ' }}</title>
  
  <meta name="description" content="{{ page_description | escape }}">
  
  {{ 'main.css' | asset_url | stylesheet_tag }}
  {{ 'components.css' | asset_url | stylesheet_tag }}
  
  {{ content_for_header }}
</head>
<body class="{{ template | handle }}">
  
  {% section 'header' %}
  
  <main role="main">
    {{ content_for_layout }}
  </main>
  
  {% section 'footer' %}
  
  <!-- Chatbot -->
  {% render 'chatbot' %}
  
  <!-- Scripts -->
  {{ 'components.js' | asset_url | script_tag }}
  {{ 'main.js' | asset_url | script_tag }}
  {{ 'animations.js' | asset_url | script_tag }}
  {{ 'analytics.js' | asset_url | script_tag }}
  
</body>
</html>
